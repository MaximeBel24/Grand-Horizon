{% extends 'base.html.twig' %}

{% block title %}Historique de commandes{% endblock %}

{% block body %}

    <h1 class="text-center mt-4 titre">Historique de commandes</h1>
    <div class="table-responsive">
    <table class="table mt-4 text-center">
        <thead class="table-dark">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Chambre</th>
                <th class="text-center">Photo</th>
                <th class="text-center">Date d'arrivée</th>
                <th class="text-center">Date de départ</th>
                <th class="text-center">Prix total</th>
                <th class="text-center">Prénom</th>
                <th class="text-center">Nom</th>
                <th class="text-center">Téléphone</th>
                <th class="text-center">Email</th>
                <th class="text-center">Date d'enregistrement</th>
            </tr>
        </thead>
        <tbody class="table-warning">
            {% for commande in commandes %}
            <tr>
                <td class="text-center">{{ commande.id }}</td>
                <td class="text-center">{{ commande.chambre.titre }}</td>
                <td class="text-center"><img src="{{ asset('uploads/images/' ~ commande.chambre.photo) }}" alt="" class="commande-photo"></td>
                <td class="text-center">{{ commande.dateArrivee|date('d/m/Y') }}</td>
                <td class="text-center">{{ commande.dateDepart|date('d/m/Y') }}</td>
                <td class="text-center">{{ commande.prixTotal/100 }}€</td>
                <td class="text-center">{{ commande.prenom }}</td>
                <td class="text-center">{{ commande.nom }}</td>
                <td class="text-center">{{ '%010s'|format(commande.telephone) }}</td>
                <td class="text-center">{{ commande.email }}</td>
                <td class="text-center">{{ commande.dateEnregistrement|date('d/m/Y H:i:s') }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>


<footer class="bg-primary">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p class="footer-text">&copy; 2023 Hôtel Grand Horizon. Tous droits réservés.</p>
        </div>
      </div>
    </div>
  </footer>



  <a href="#" class="scroll-to-top" title="Remonter en haut de la page">&#8593;</a>
  <script src="{{ asset('assets/js/main.js')}}"></script>
{% endblock %}